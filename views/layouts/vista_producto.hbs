<!DOCTYPE html>
<html lang="en">

    <head>
      <link rel="import" href="../partials/head.hds">
    
    </head>
    <body style="margin: 20px 150px">
    <header>
      <link rel="import" href="../partials/header.hbs">
    </header>

    <main>
        <p> </p>
        <p class="h2">Ingrese Producto</p>
        <p> </p>
        <form action="/productos" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre del Producto</label>
                <input name= "nombre" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingrese el Nombre del Producto">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Precio</label>
                <input name= "precio" type="number" class="form-control" id="exampleInputEmail1" placeholder="Precio en U$D">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Link de la Imagen</label>
                <input name= "foto" type="url" class="form-control" id="exampleInputEmail1" placeholder="Ingrese el URL completo">
            </div>
            <p> </p>
            <button type="submit" class="btn btn-primary">Ingresar</button>
            </form>

            <p class="h2">Vista de Productos</p>

 {{#if(productos == undefined ||productos.length === 0)}}
    <div class="p-3 mb-2 bg-warning text-dark">No se Encontraron Productos</div>
    
 {{else}} 
  <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Foto</th>
    </tr>
  </thead>
    <tbody>
      {{#each productos }}
        <tr>
          <td>
             {{this.nombre}}
          </td>
          <td>
             {{this.precio}}
          </td>
          <td>
            <img src=" {{this.foto }}" alt="" width="50" height="50"> 
          </td
        </tr>
        {{/each}}
  </tbody>
  </table>
  {{/if}}
    
<p> </p>

    </main>
  
    </body>
</html>